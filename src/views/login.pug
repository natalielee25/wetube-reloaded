extends base

block content 
    if errorMessage 
        span=errorMessage
    form(method="POST")
        input(placehoder="Username", name="username", type="text", required)
        input(placehoder="Password", name="password", type="password", required)
        input(type="submit", value="Login")
        include partials/social-login
    div.auth-switch
        span Don't have an account? 
        a(href="/join") Create now &rarr;