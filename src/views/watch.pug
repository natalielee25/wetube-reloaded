extends base

block content
  div#videoContainer
    video#video(
      src="/" + video.fileUrl
      playsinline
    )

    div#videoControls.videoControls
      div.videoControls__play
        span#play.videoControls__playBtn
          i.fas.fa-play
        div.videoControls__time
          span#currentTime 00:00
          span  / 
          span#totalTime 00:00

      input#timeline.videoControls__timeline(
        type="range"
        step="1"
        value="0"
        min="0"
      )

      div.videoControls__volume
        input#volume(
          type="range"
          step="0.1"
          value="0.5"
          min="0"
          max="1"
        )
        span#mute
          i.fas.fa-volume-up

      div.videoControls__fullScreen
        span#fullScreen
          i.fas.fa-expand

block scripts
  script(src="/assets/js/videoPlayer.js" type="text/javascript")