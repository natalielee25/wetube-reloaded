extends base.pug

block content 
    form(method="POST", enctype="multipart/form-data")
        label(for="video") Video File
        input(type="file", accept="video/*", required, id="video", name="video")
        input(placeholder="Title", required, type="text", name="title", minLength:5)
        input(placeholder="Description", required, type="text", name="description", minLength: 20)
        input(placeholder="Hashtags, seperated by comma.", required, type="text", name="hashtags")
        input(type="submit", value="Upload Video")